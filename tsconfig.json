{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "keyofStringsOnly": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "baseUrl": "./",
    "paths": {
      "@config/*": [ "./src/config/*" ],
      "@env": [ "./src/config/environment" ],
      "@t/*": [ "./src/types/*" ]
    }
  },
  "include": [
    "src/**/*.ts",
    "bin/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
